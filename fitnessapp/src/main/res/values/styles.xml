<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle" parent="Theme.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorViolet</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="TextStyleSmall" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyleProfile" parent="Theme.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="color">@android:color/black</item>
        <item name="android:layout_margin">7dp</item>
    </style>

    <style name="TextStyleProfileEmpty" parent="Theme.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/colorLightGrey</item>
        <item name="android:layout_margin">7dp</item>
    </style>

    <style name="TextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="TextTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextCategory" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextCategoryHistory" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">25sp</item>
    </style>



</resources>