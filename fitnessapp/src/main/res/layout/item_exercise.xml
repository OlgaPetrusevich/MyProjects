<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewItemExerciseList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/exercise_item">


    <TextView
        android:id="@+id/tvExerciseName"
        style="@style/TextStyle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:text="@string/default_exercise_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivMiniatureExercise"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivMiniatureExercise"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/tvExerciseName"
        app:layout_constraintLeft_toRightOf="@id/tvExerciseName"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/tvExerciseName" />


</androidx.constraintlayout.widget.ConstraintLayout>